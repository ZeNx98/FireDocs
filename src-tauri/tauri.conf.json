{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "firedoc",
    "version": "3.2.0",
    "identifier": "com.znx.firedoc",
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "frontendDist": "../web"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "FireDoc",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "url": "homepage.html"
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            },
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' tauri: asset: https: data: blob: pdfstream: ipc:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png",
            "icons/icon.ico",
            "icons/icon.icns"
        ],
        "category": "Utility",
        "copyright": "",
        "shortDescription": "",
        "longDescription": "",
        "linux": {
            "deb": {
                "depends": []
            },
            "rpm": {
                "depends": [
                    "webkit2gtk4.1",
                    "gtk3",
                    "libayatana-appindicator"
                ]
            }
        }
    }
}